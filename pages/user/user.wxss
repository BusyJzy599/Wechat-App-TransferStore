    height: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 2rpx;
}

.login-button {
    width: 200rpx;
    background: rgba(114, 130, 138, 0);
}

.login-button::after {
    border: none;
}